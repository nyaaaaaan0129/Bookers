<h1>Editing book</h1>
<div class="form"><%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= @book.errors.count %> errors </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
<% end %>
</div>

<div class="link">
	<%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
</div>